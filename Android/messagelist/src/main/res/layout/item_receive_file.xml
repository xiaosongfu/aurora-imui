<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/aurora_msgitem_receive_style">


    <TextView
        android:id="@+id/aurora_tv_msgitem_date"
        style="@style/aurora_msgitem_date_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <cn.jiguang.imui.view.CircleImageView
            android:id="@+id/aurora_iv_msgitem_avatar"
            style="@style/aurora_msgitem_receiver_avatar_style" />

        <TextView
            android:id="@+id/aurora_tv_msgitem_display_name"
            style="@style/aurora_msgitem_display_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/aurora_iv_msgitem_avatar" />


        <!--<TextView-->
            <!--android:id="@+id/aurora_tv_msgitem_message"-->
            <!--style="@style/aurora_msgitem_msg_txt_style"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/aurora_tv_msgitem_display_name"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_toRightOf="@id/aurora_iv_msgitem_avatar"-->
            <!--android:background="@drawable/talk_from_bubble" />-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/aurora_tv_msgitem_display_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/aurora_iv_msgitem_avatar"
            android:background="@drawable/talk_from_bubble" >

            <ImageView
                android:id="@+id/file_icon_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/attachment_icon"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/aurora_tv_msgitem_message"
                style="@style/aurora_msgitem_msg_txt_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/file_icon_iv"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:paddingBottom="24dp"/>

            <TextView
                android:id="@+id/aurora_tv_msgitem_filesize"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/file_icon_iv"
                android:layout_below="@id/aurora_tv_msgitem_message"
                android:layout_marginLeft="6dp"
                android:layout_alignLeft="@id/aurora_tv_msgitem_message"
                android:layout_marginBottom="2dp"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>